# .env.example - Environment variables for Forex ML Pipeline
# Copy to .env and customize for your environment
# Usage: cp .env.example .env && nano .env

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=forex_ml_2024
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
FOREX_DB=forex_trading_data
UNCONVENTIONAL_DB=unconventional_features

# =============================================================================
# Pipeline Configuration
# =============================================================================
BATCH_SIZE=250000
PARALLEL_WORKERS=4

# =============================================================================
# Feature Extraction
# =============================================================================
ENABLE_IMAGE_FEATURES=false
ENABLE_PROMETHEUS=false
ASSET_LIST=EURUSD,GBPUSD,USDJPY
TIMEFRAME_LIST=H1,H4,D

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_TYPE=xgboost
N_SPLITS=5
MAX_FEATURES=100

# =============================================================================
# Monitoring (Optional - used with --profile monitoring)
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# External Database Connection (for production)
# Uncomment and configure to connect to external forex_trading_data
# =============================================================================
# POSTGRES_HOST=192.168.50.210
# POSTGRES_PORT=5021

# =============================================================================
# Optional: OANDA API (for live data)
# =============================================================================
# OANDA_ACCOUNT_ID=
# OANDA_API_KEY=
# OANDA_BASE_URL=https://api-fxpractice.oanda.com

# =============================================================================
# Optional: Server Configuration (for distributed processing)
# =============================================================================
# SERVER_ID=1
# TOTAL_SERVERS=4
